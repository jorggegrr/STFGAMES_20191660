<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PuzzleActivity">



    <!-- GridView para las piezas del puzzle -->

    <Button
        android:id="@+id/btnUploadImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="100dp"
        android:text="Stf-Puzzle SV" />

    <Button
        android:id="@+id/btnStartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="26dp"
        android:text="Jugar" />

    <GridView
        android:id="@+id/puzzleGridView"
        android:layout_width="wrap_content"
        android:layout_height="434dp"
        android:layout_above="@+id/btnUploadImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="100dp"
        android:columnWidth="90dp"
        android:gravity="center"
        android:numColumns="3"
        android:stretchMode="columnWidth" />

    <!-- Add other UI elements for the puzzle game here -->

</RelativeLayout>
